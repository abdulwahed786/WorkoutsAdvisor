<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlActivated"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.abdulwahed.workoutsadvisor.FindWorkoutActivity"
    tools:showIn="@layout/activity_find_workout">

    <Spinner
        android:id="@+id/workouttype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/darker_gray"
        android:entries="@array/workout_types"
        android:minWidth="20dp"
        android:popupBackground="@android:color/holo_blue_bright"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    </Spinner>

    <Button
        android:id="@+id/findworkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workouttype"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:onClick="onClickFindWorkout"
        android:text="@string/find_workout" />

    <TextView
        android:id="@+id/workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:text="@string/workouts_here"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/findworkout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
